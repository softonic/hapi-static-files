{
  "name": "@softonic/hapi-static-files",
  "version": "3.0.0",
  "author": "RubÃ©n Norte <ruben.norte@softonic.com>",
  "contributors": [
    "Pere Monfort <pere.monfort@softonic.com>"
  ],
  "description": "Hapi plugin to serve static files with a predefined configuration",
  "license": "Apache-2.0",
  "main": "index.js",
  "homepage": "https://github.com/softonic/hapi-static-files",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softonic/hapi-static-files.git"
  },
  "files": [
    "es",
    "lib",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint es/**/*.js",
    "pretest": "npm run lint",
    "test": "jest --forceExit",
    "tdd": "jest --watch",
    "prebuild": "npm run test",
    "build": "rm -rf lib && babel es -d lib --source-maps",
    "prerelease": "npm run build",
    "release": "npm version -m \"New version: %s\"",
    "postrelease": "npm run push && npm publish",
    "push": "git push origin master && git push origin --tags"
  },
  "engines": {
    "node": ">=12.14.1"
  },
  "peerDependencies": {
    "hapi": "19.x.x"
  },
  "dependencies": {
    "@hapi/inert": "^6.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@hapi/hapi": "^19.0.5",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "jest": "^25.1.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage"
        }
      ]
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.jsx?$"
  }
}
