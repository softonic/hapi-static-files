{
  "name": "hapi-static-files",
  "version": "2.0.0",
  "author": "Rub√©n Norte <ruben.norte@softonic.com>",
  "contributors": [
    "Pere Monfort <pere.monfort@softonic.com>"
  ],
  "description": "Hapi plugin to serve static files with a predefined configuration",
  "license": "Apache-2.0",
  "main": "index.js",
  "homepage": "https://github.com/softonic/hapi-static-files",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softonic/hapi-static-files.git"
  },
  "files": [
    "es",
    "lib",
    "index.js"
  ],
  "scripts": {
    "lint": "eslint es/**/*.js",
    "pretest": "npm run lint",
    "test": "jest --forceExit",
    "tdd": "jest --watch",
    "prebuild": "npm run test",
    "build": "rm -rf lib && babel es -d lib --source-maps",
    "prerelease": "npm run build",
    "release": "npm version -m \"New version: %s\"",
    "postrelease": "npm run push && npm publish",
    "push": "git push origin master && git push origin --tags"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "peerDependencies": {
    "hapi": "17.x.x"
  },
  "dependencies": {
    "inert": "^5.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "hapi": "^17.0.1",
    "jest": "^23.5.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.9.0"
          }
        }
      ]
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.jsx?$"
  }
}
